
<%= form_for([@restaurant, @review]) do |f| %>

	<%= f.hidden_field :user_id, :value => current_user.id %>

	<div class="field">
    <%= f.label "rating" %> <br />
    <%= f.select :rating, [1,2,3,4,5]  %> <br />
	</div>

	<div class="field">
		<%= f.label :comment %><br/>
		<%= f.text_area :comment, :placeholder => "What was your experience like at this restaurant?" %>
	</div>

	<div class="actions">
		<%= f.submit %>
		</div>
	</div>

<% end %>

