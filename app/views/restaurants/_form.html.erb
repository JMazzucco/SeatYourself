<%= form_for(@restaurant) do |f| %>
	<% if @restaurant.errors.any? %>
		<div class="starter-template">
		<div id="error_explanation">
			<h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>
			<ul>
			<% @restaurant.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<%= f.hidden_field :owner, :value => current_user.id %>

	<div class="field">
		<%= f.label :image %><br/>
		<%= f.url_field :image, :value => "http://" %>
	</div>

	<div class="field">
		<%= f.label :name %><br/>
		<%= f.text_field :name, :placeholder => "Milestones " %>
	</div>

	<div class="field">
		<%= f.label :address %><br/>
		<%= f.text_field :address, :placeholder => "123 Bay St."%>
	</div>

	<div class="field">
    <%= f.label "Cuisine" %> <br />
    <%= f.select :cuisine_type, [['Thai'],['Italian'],['Seafood'],['Indian']]  %> <br />
	</div>
	</div>

	<div class="field">
		<%= f.label :website %><br/>
		<%= f.url_field :website, :value => "http://" %>
	</div>

	<div class="actions">
		<%= f.submit %>
		</div>
	</div>
<% end %>

