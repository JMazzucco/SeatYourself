<div>
  <%= image_tag("restaurant-mobile.jpg", id: "background-img", alt: "restaurant background image") %>
</div>

<section>
  <button id="current-location">Find restaurants near me</button>
  <p class="error location-error">Unable to find your location</p>
</section>

<section>
  <%= form_tag restaurants_path, method: :get do %>
  <%= label_tag :search, 'Find Restaurants Nearby' %>
  <%= search_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>
</section>

<section id="restaurants">
<div>
  <%= link_to "Add a new restaurant Â»", new_restaurant_path %>
</div>
<div class="container">
  <div class="row">
			<%= render @restaurants %>
      </div>
  </div>
</section>