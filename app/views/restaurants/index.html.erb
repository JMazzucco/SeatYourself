<div id="img-container">
  <%= image_tag("restaurant-mobile.jpg", id: "background-img", alt: "restaurant background image") %>

   <form class="form-wrapper cf">
        <input type="text" placeholder="Find Restaurants by Address" required>
        <button type="submit">Search</button>
  </form>
</div>



<div id='search-container'>

  <div>
    <button id="current-location ">Find restaurants near me</button>
    <p class="error location-error">Unable to find your location</p>


  </div>

  <h4><em>or</em> </h4>

  <div>


    <%= form_tag restaurants_path, method: :get do %>
      <p><%= label_tag :search, 'Find Restaurants Near Location:' %></p>
      <%= search_field_tag :search, params[:search], placeholder: "200 Bay, Toronto, ON" %>
      <%= submit_tag "Search" %>
    <% end %>
  </div>
</div>

<section id="restaurants">

<div class="container">
  <div class="row">
			<%= render @restaurants %>
      </div>
  </div>

  <div>
  <%= link_to "Add a new restaurant Â»", new_restaurant_path %>
</div>
</section>