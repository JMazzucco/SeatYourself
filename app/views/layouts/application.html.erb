<!DOCTYPE html>
<html>
<head>
  <title>SeatYourself</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= link_to "SeatYourself", restaurants_path %>
<% if current_user %>
  Signed in as <%= current_user.name %>
  <button type="button"> <%= link_to "Log out", session_path("current"), method: :delete %></button>
  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:alert] %>
    <p><%= flash[:alert] %></p>
  <% end %>
<% else %>
  <button type="button"><%= link_to "Log in", new_session_path %></button>
  <button type="button"><%= link_to "Sign up", new_user_path %></button>
<% end %>

<%= yield %>

</body>
</html>
